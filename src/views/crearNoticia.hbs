<div class="col-md-4 mx-auto mt-5">
    <div class="card border-success text-center">
        <div class="card-header pt-3">
            {{#if _id}}
            <h3>Actualizar Noticia</h3>
            {{else}}
            <h3>Crear Noticia</h3>
            {{/if}}
        </div>
        <div class="card-body">
            {{#if _id}}
            <form action="/actualizar-noticia/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group mb-4">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Ingresa la categoria de ciberestafa" name="tipoCiber" value="{{tipoCiber}}">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Ingresa el titulo de la noticia" name="titulo" value="{{titulo}}">
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="exampleTextarea" name="descripcion"
                        placeholder="Introduce la descripcion" rows="8">{{descripcion}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">
                        Actualizar Noticia
                    </button>
                </div>
            </form>
            {{else}}
            <form action="/crear-noticia" method="post">
                <div class="form-group mb-4">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Ingresa la categoria de ciberestafa" name="tipoCiber">
                </div>
                <div class="form-group mb-2">
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Ingresa el titulo de la noticia" name="titulo">
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="exampleTextarea" name="descripcion"
                        placeholder="Introduce la descripcion" rows="8"></textarea>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">
                        Crear Noticia
                    </button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>